---
import { Astronav, MenuIcon, MenuItems } from "astro-navbar";
import Link from "@/components/shared/link.astro";
import Container from "@/components/Shared/container.astro";

const menuitems = [
  {
    title: "Caracteristicas",
    badge: "New",
    path: "#features",
  },
  {
    title: "Planes",
    path: "#pricing",
  },
  {
    title: "Acerca de",
    path: "#about",
  },
];
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="text-lg">
          <span class="font-bold text-slate-800">Ziele</span>
          <span class="text-slate-500">Software</span>
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>

      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item) => (
              <li>
                <a
                  href={item.path}
                  class="flex lg:px-3 py-2 items-center text-gray-600 hover:text-gray-900"
                >
                  <span> {item.title}</span>
                  {item.badge && (
                    <span class="ml-1 px-2 py-0.5 text-[10px] animate-bounce font-semibold uppercase text-white bg-amber-300 rounded-full">
                      {item.badge}
                    </span>
                  )}
                </a>
              </li>
            ))
          }
        </ul>
        <div class="lg:hidden flex items-center mt-3 gap-4">
          <Link href="#register" size="md" block>Registrarse</Link>
        </div>
      </MenuItems>
    </Astronav>
    <div>
      <div class="hidden lg:flex items-center gap-4">
        <Link href="#register" size="md" style="custom">Registrarse</Link>
      </div>
    </div>
  </header>
</Container>
